{
    "output_dir": "~/Videos/transcripts",
    "device": "auto",
    "model_size": "base",
    "window_width": 1280,
    "window_height": 800,
    "window_maximized": false,
    "splitter_sizes": [720, 480],
    "output_formats_multi": ["srt"],
    "language": "auto",
    "translate_lang": "en",
    "use_local_llm_correction": true,
    "use_local_llm_translation": true,
